@{
    ViewBag.Title = "Snack";
}

@using (Html.BeginForm("Login", "Login"))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal Glass" style="align-content:center">

        <div class="row g-0">
            <div class="col-md-8">
                <div class="Glass container" style="height:100%">
                    <div class="row p-4">
                        <h1 class="card-title" style="text-align:center; color:#0d4456">¡Bienvenido a !</h1>
                    </div>
                    <div class="row p-1">
                        <a class="nav-link active" aria-current="page" href="" style="text-align: center; color: #0d4456">@Html.ActionLink("Registrase", "Create", "Usuario", null, new { @class = "nav-link" })</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card-body container" style="margin-top:10%">
                    <div class="row p-3">
                        <h4 class="card-text" style="text-align:center; color:#0d4456">¿Ya posees una cuenta?</h4>
                    </div>@{ ViewBag.Title = "HomeBooking"; }

                    <div class="Glass" style="color:#0d4456">
                        <div class="card-body">
                            <h1 class="card-title" style="text-align:center">¡Bienvenido a HomeBooking!</h1>
                            <h2 class="card-text" style="text-align:center">¡Encuentre con nosotros las vacaciones que se merece!</h2>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="card-body Glass" style="margin:5%" id="FirstBlock">
                                    <div style="text-align:center">
                                        <img src="~/Images/mapa.png" class="card-img-top" alt="..." style="width:200px; text-align:center">
                                    </div>
                                    <h5 class="card-title">Busqueda rápida</h5>
                                    <p class="card-text">No perderá tiempo buscando su casa ideal.</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card-body Glass" style="margin:5%" id="SecondBlock">
                                    <div style="text-align:center">
                                        <img src="~/Images/credit-card.png" class="card-img-top" alt="..." style="width:200px">
                                    </div>
                                    <h5 class="card-title">Pago seguro</h5>
                                    <p class="card-text">Nuestro sistema de pagos está certificado.</p>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="card-body Glass" style="margin:5%" id="FirstBlock">
                                    <div style="text-align:center">
                                        <img src="~/Images/ad.png" class="card-img-top" alt="..." style="width:200px">
                                    </div>
                                    <h5 class="card-title">Sin anuncios</h5>
                                    <p class="card-text">Una interfaz amigable sin molestos anuncios.</p>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="card-body Glass" style="margin:5%" id="SecondBlock">
                                    <div style="text-align:center">
                                        <img src="~/Images/personal-information.png" class="card-img-top" alt="..." style="width:200px">
                                    </div>
                                    <h5 class="card-title">Privacidad</h5>
                                    <p class="card-text">Sus datos no serán compartidos con terceros.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" style="margin-top: 7%; margin-bottom:7%">
                        <div class="carousel-indicators">
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        </div>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img src="https://www.lifewire.com/thmb/V273lhXJkKPcZEZME-N6BQAE_Fw=/1430x0/filters:no_upscale():max_bytes(150000):strip_icc():format(webp)/starfish-free-beach-wallpapers-wallpapers-land-587fb9825f9b584db31e4473.jpg" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h2>Maravillosas playas</h2>
                                    <h3>¡Te vas a asombrar con lo que te puedes encontrar!</h3>
                                </div>
                            </div>

                            <div class="carousel-item">
                                <img src="https://cdn1.matadornetwork.com/blogs/2/2017/09/trekking-en-costa-rica.jpg" class="d-block w-100" alt="...">
                                <div class="carousel-caption d-none d-md-block">
                                    <h2>Impresionantes montañas</h2>
                                    <h3>¡Adentrate en la montaña por una aventura!</h3>
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row p-3">
                    </div>
                    <div class="row p-3">
                    </div>
                    <div class="row p-3">
                        <input type="submit" value="Log in" class="btn btn-default" style="background-color:#0d4456; color:white" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}